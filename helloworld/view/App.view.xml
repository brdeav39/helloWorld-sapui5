<mvc:View
	controllerName="sap.ui.helloworld.namespace.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
	<Button
		text="{i18n>showHelloButtonText}"
		press="onShowHello" />
	<Input
		value="{oModelRec>/recipient/name}"
		description="Hello {oModelRec>/recipient/name}"
		valueLiveUpdate="true"
		width="60%"/>
	<!--<Text text="Hello World!" />-->
</mvc:View>